{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "s:/logs/msone/msone.local.log",
          "pathFormat": "log-{Date}.log",
          "rollingInterval": "Day",
          "outputTemplate": "\"{Timestamp:o} [{Level:u3}] ({Environment}/{Application}/{MachineName}/{EnvironmentUserName}) ({SourceContext}) {Message:lj}{NewLine}in method {MemberName} at {FilePath}:{LineNumber}{Exception}"
        }
      }
    ],
    //"Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId", "WithEnvironmentUserName" ],
    "Properties": {
      //"Application": "msone"
    }
  },
  "AllowedHosts": "*"
}
